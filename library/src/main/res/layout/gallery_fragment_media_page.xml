<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_page_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <cn.finalteam.rxgalleryfinal.ui.widget.FixViewPager
        android:id="@+id/view_pager_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="#EF2B2C30"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/tv_image_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="#FFFFFF"
            android:text="@string/gallery_image_selected" />

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/cb_page_check"
            style="@style/gallery_checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/tv_image_selected"
            android:layout_centerVertical="true"
            android:layout_margin="2dp" />

    </RelativeLayout>

</RelativeLayout>